<?xml version="1.0" encoding="UTF-8"?>
<PermissionSet xmlns="http://soap.sforce.com/2006/04/metadata">

    <label>ApiProvider</label>

    <!-- Permissão API Enabled (opcional, mas útil para orgs com perfil restrito) -->
    <userPermissions>
        <enabled>true</enabled>
        <name>ApiEnabled</name>
    </userPermissions>

    <!-- Permissões no Objeto Customer__c -->
    <objectPermissions>
        <allowCreate>true</allowCreate>
        <allowDelete>true</allowDelete>
        <allowEdit>true</allowEdit>
        <allowRead>true</allowRead>
        <modifyAllRecords>false</modifyAllRecords>
        <object>Customer__c</object>
        <viewAllRecords>false</viewAllRecords>
    </objectPermissions>

    <!-- Permissões nos Fields -->
    <fieldPermissions>
        <editable>true</editable>
        <field>Customer__c.Email__c</field>
        <readable>true</readable>
    </fieldPermissions>

    <fieldPermissions>
        <editable>true</editable>
        <field>Customer__c.Phone__c</field>
        <readable>true</readable>
    </fieldPermissions>

    <fieldPermissions>
        <editable>true</editable>
        <field>Customer__c.Status__c</field>
        <readable>true</readable>
    </fieldPermissions>

    <!-- Permitir execução da classe Apex REST -->
    <classAccesses>
        <apexClass>CustomerRestService</apexClass>
        <enabled>true</enabled>
    </classAccesses>

</PermissionSet>
