{
  "info": {
    "_postman_id": "a8f7ce62-6fd1-4f92-97a5-23dc7db4a998",
    "name": "Salesforce API Provider",
    "description": "Collection para testar a API REST Apex do Salesforce (CRUD + OAuth).",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "OAuth 2.0 – Authorization Code",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "https://login.salesforce.com/services/oauth2/authorize",
          "protocol": "https",
          "host": ["login", "salesforce", "com"],
          "path": ["services", "oauth2", "authorize"],
          "query": [
            { "key": "response_type", "value": "code" },
            { "key": "client_id", "value": "{{client_id}}" },
            { "key": "redirect_uri", "value": "https://localhost/callback" }
          ]
        }
      }
    },
    {
      "name": "GET – List Customers",
      "request": {
        "method": "GET",
        "header": [
          { "key": "Authorization", "value": "Bearer {{access_token}}" }
        ],
        "url": {
          "raw": "{{instance_url}}/services/apexrest/v1/customers",
          "host": ["{{instance_url}}"],
          "path": ["services", "apexrest", "v1", "customers"]
        }
      }
    },
    {
      "name": "GET – Customer by Id",
      "request": {
        "method": "GET",
        "header": [
          { "key": "Authorization", "value": "Bearer {{access_token}}" }
        ],
        "url": {
          "raw": "{{instance_url}}/services/apexrest/v1/customers/{{customer_id}}",
          "host": ["{{instance_url}}"],
          "path": ["services", "apexrest", "v1", "customers", "{{customer_id}}"]
        }
      }
    },
    {
      "name": "POST – Create Customer",
      "request": {
        "method": "POST",
        "header": [
          { "key": "Authorization", "value": "Bearer {{access_token}}" },
          { "key": "Content-Type", "value": "application/json" }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"Name\": \"Postman Customer\",\n  \"Email\": \"postman@example.com\",\n  \"Status\": \"Active\"\n}"
        },
        "url": {
          "raw": "{{instance_url}}/services/apexrest/v1/customers",
          "host": ["{{instance_url}}"],
          "path": ["services", "apexrest", "v1", "customers"]
        }
      }
    },
    {
      "name": "PUT – Update Customer",
      "request": {
        "method": "PUT",
        "header": [
          { "key": "Authorization", "value": "Bearer {{access_token}}" },
          { "key": "Content-Type", "value": "application/json" }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"Email\": \"updated@example.com\"\n}"
        },
        "url": {
          "raw": "{{instance_url}}/services/apexrest/v1/customers/{{customer_id}}",
          "host": ["{{instance_url}}"],
          "path": ["services", "apexrest", "v1", "customers", "{{customer_id}}"]
        }
      }
    },
    {
      "name": "DELETE – Remove Customer",
      "request": {
        "method": "DELETE",
        "header": [
          { "key": "Authorization", "value": "Bearer {{access_token}}" }
        ],
        "url": {
          "raw": "{{instance_url}}/services/apexrest/v1/customers/{{customer_id}}",
          "host": ["{{instance_url}}"],
          "path": ["services", "apexrest", "v1", "customers", "{{customer_id}}"]
        }
      }
    }
  ],
  "variable": [
    { "key": "instance_url", "value": "" },
    { "key": "access_token", "value": "" },
    { "key": "customer_id", "value": "" },
    { "key": "client_id", "value": "" }
  ]
}
